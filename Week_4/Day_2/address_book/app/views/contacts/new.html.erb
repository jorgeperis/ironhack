<h1>Add a new contact</h1>

<form action="/contacts" method="POST">
  <div>
    <label for="contact_name">Name</label>
    <input type="text" name="contact[name]" value="<%= @contact[:name] if @contact%>" style="<%= @style if @validate[0] == 0%>" id="contact_name">
  </div>

  <div>
    <label for="contact_address">Address</label>
    <input type="text" name="contact[address]" value="<%= @contact[:address] if @contact%>" style="<%= @style if @validate[1] == 0%>" id="contact_address"></textarea>
  </div>

  <div>
    <label for="contact_phone">Phone number</label>
    <input type="tel" name="contact[phone]" value="<%= @contact[:phone] if @contact %>" style="<%= @style if @validate[2] == 0%>" id="contact_phone">
  </div>

  <div>
    <label for="contact_email">Email</label>
    <input type="email" name="contact[email]" value="<%= @contact[:email] if @contact%>" style="<%= @style if @validate[3] == 0%>" id="contact_email">
  </div>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p style="color:red"><b><%= @validation %></b></p>
  <button type="submit">Add this contact</button>
</form>
