<h1>Add a Concert</h1>

<%= form_for @concert do |f| %>

  <%= f.label :artist %>
  <%= f.text_field :artist %>

  <%= f.label :venue %>
  <%= f.text_field :venue %>


  <%= f.select :city, @cities, { prompt: "Select City" } %>


  <%= f.label :date %>
  <%= f.datetime_field :date %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.file_field :avatar %>

  <%= f.button 'Save Concert'%>
<% end %>
