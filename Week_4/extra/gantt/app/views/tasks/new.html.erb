<h1>Add a Task</h1>

<%= form_for @task do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :start %>
  <%= f.date_field :start %>

  <%= f.label :finish %>
  <%= f.date_field :finish %>

  <%= f.select :project, Project.all.collect {|p| [ p.name, p.id ] }, { prompt: "Select Project" } %>

  <%= f.select :colleague, Colleague.all.collect {|p| [ p.name, p.id ] }, { prompt: "Select Colleague" } %>

  <%= f.button 'Save Task'%>
<% end %>
