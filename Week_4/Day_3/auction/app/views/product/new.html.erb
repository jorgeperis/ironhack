<h1>Add a Product</h1>

<%= form_for @product do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :deadline %>
  <%= f.datetime_field :deadline %>

  <%= f.label 'User email' %>
  <%= f.email_field :user_id %>

  <%= f.button %>
<% end %>
